<% @device_types.each do |device_type| %>
  <tr>
    <td><%= device_type.name %></td>
    <td><%= device_type.module_name %></td>
    <td><%= device_type.data_type %></td>
    <td><%= device_type.data_flow %></td>
    <td><%= device_type.unit %></td>
    <td><%= link_to 'Show', device_type %></td>
    <td><%= link_to 'Edit', edit_device_type_path(device_type) %></td>
    <td><%= link_to 'Destroy', device_type, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

