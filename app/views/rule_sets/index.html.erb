<h1>Listing rule_sets</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Action set</th>
    <th>Condition set</th>
    <th>User</th>
    <th>Description</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rule_sets.each do |rule_set| %>
  <tr>
    <td><%= rule_set.name %></td>
    <td><%= rule_set.action_set_id %></td>
    <td><%= rule_set.condition_set_id %></td>
    <td><%= rule_set.user_id %></td>
    <td><%= rule_set.description %></td>
    <td><%= rule_set.active %></td>
    <td><%= link_to 'Show', rule_set %></td>
    <td><%= link_to 'Edit', edit_rule_set_path(rule_set) %></td>
    <td><%= link_to 'Destroy', rule_set, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

